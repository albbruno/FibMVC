@model FibMVC.Models.FibonacciMdl

@using (Html.BeginForm())
{
    @Html.TextBoxFor(x => x.lengthOfFibo, new { @placeholder = "place the magic number here" })
    <br />
    @Html.TextBoxFor(x => x.test, new { @placeholder = "testing input" })

    <input type="submit" value="Activate Sequence!" />
}

<br />

@foreach (var item in (Model.GetNumbers(Model.lengthOfFibo) as List<int>))
{
    @Html.DisplayFor(x => item)
    <br />
}